<!-- Product Details -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-1 d-flex d-md-block">
            <%singleProduct.image.forEach(img=>{ %>
            <div class="m-1"  style="width: 4rem;">
                <img src="/images/<%=img?.filename%>" alt="Product Image" class="img-fluid small-image"><br>
            </div>
           <% })%>
           
        </div>
        <div class="col-lg-4 main-image border pt-3" style="overflow: hidden;">
            <img src="/images/<%=singleProduct.image[0]?.filename%>" alt="Product Image" id="main-img" class="img-fluid large-image">
        </div>
        
        <div class="col-lg-6">
            <div class="border ms-3 p-3">
            <h1 class="fw-bold fs-5 "><%=singleProduct.productname%></h1>
            <!-- <p class="text-muted fw-bold fs-5"><%=singleProduct.category.category %></p> -->
            <h2 class="text-dark fs-5">₹<%=singleProduct.sellingPrice%>&nbsp;<strike class="text-danger">₹<%=singleProduct.actualPrice%></strike></h2>
            
           </div>
            <!-- <button class="btn btn-primary w-25">Add to Cart</button> -->
           <div class="pt-5 ms-3">
            <!-- for add to cart -->
            <% if (productFound && productFound.product && productFound.product.length > 0) { %>
                <a href="/cart" class="btn btn-danger fw-bold ls" style="background-color:#c70261;height:3rem; width:10rem"><i class="fa fa-shopping-cart text-light py-2" style="font-size:1rem; "></i>GO TO CART</a>
            <% } else { %>
                <a href="/add_cart?productId=<%= singleProduct._id %>" class="btn text-white fw-bold " style="background-color: #E80071;height:3rem; width:10rem"><i class="fa fa-shopping-cart text-light py-2" style="font-size:1rem; "></i>ADD TO CART</a>
            <% } %>

            <% if(wishlistFound && wishlistFound.product && wishlistFound.product.length > 0){ %>
                <a href="/add_wishlist?productId=<%= singleProduct._id %>" class="btn fw-bold disabled text-white py-2" style="font-size:1rem; background-color:#c70261; height:3rem; width:10rem; "><i class="fa fa-heart text-light"></i> WISHLISTED</a>
                <% }else{ %>
                <a href="/add_wishlist?productId=<%= singleProduct._id %>" class="btn fw-bold text-white" style="background-color: #E80071; height:3rem; width:10rem"><i class="fa fa-heart text-light py-2" style="font-size:1rem; "></i>  WISHLIST</a>
                    <% } %>
            </div>
            <div class="border mt-3 ms-1">
                <h3 class="fw-bold p-1 ms-3">Description</h3>
                <p class="ps-2"><%=singleProduct.description%></p>
            </div>
        </div>

    </div>
</div>



